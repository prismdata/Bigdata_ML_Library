{
  "packagename":"org.ankus.mapreduce.algorithms.recommendation.similarity.contentbased",
  "author":"onycom",
  "create":"2016-04-14",
  "applist":[
		{
	"appname":"Content based Similarity", 
	"appicon":"res/images/recom_content_sim.png",		
	"classname":"ContentBasedSimilarity",
	"version": "0.1",
	"appgroup": "RECOMMENDATION",
	"nexus":"ankus-core2-contents-sim-1.1.0.jar",	
	"params":[		
			{
			 "type":"columnselect",
			 "name":"keyIndex",
			 "description":"Identifier Attribute(Index)",
			 "required":"Y",
			 "iotype":"I"		 
			},
			{
			 "type":"columnindex",
			 "name":"indexList",
			 "description":"Target Attribute(Index)",
			 "required":"Y",			
			 "iotype":"I"		 
			},
			{
			 "type":"columnindex",
			 "name":"exceptionIndexList",
			 "description":"Exception Attrbute(Index)",
			 "required":"N",			
			 "iotype":"I"		 
			},
			{
			 "type":"combo",
			 "name":"algorithmOption",
			 "description":"Similarity/Correlation Algorithm",
			 "required":"N",
			 "values":[
				   {"value":"jaccard","option":"JACCARD COEFFICIENT"},				
				   {"value":"dice","option":"DICE COEFFICIENT"}
				   ], 
			 "iotype":"I"		 
			},
			{
			 "type":"combo",
			 "name":"sumOption",
			 "description":"Similarity Sum Option",
			 "required":"N",
			 "values":[
				   {"value":"avg","option":"AVERAGE"},				
				   {"value":"sum","option":"SUM"},
				   {"value":"cfsum","option":"CERTAINTY FACTOR"}
				   ], 
			 "iotype":"I"		 
			},
			{
			 "type":"text",
			 "name":"targetID",
			 "description":"Similarity Target ID",
			 "required":"N",
			 "iotype":"I"		
			}			
		]	
	}
  ]
}